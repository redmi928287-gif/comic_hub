# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
# For local development: mongodb://localhost:27017/comic-website
# For production (MongoDB Atlas): mongodb+srv://username:password@cluster.mongodb.net/comic-website?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/comic-website

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Optional: External Services
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# CLOUDINARY_URL=your_cloudinary_url_here

# Render Deployment Notes:
# 1. Set NODE_ENV=production in Render dashboard
# 2. Set MONGODB_URI to your MongoDB Atlas connection string
# 3. Generate strong JWT_SECRET and SESSION_SECRET for production
# 4. Set PORT=3000 (Render will override this automatically) 